
@{
    Layout = null;
}


<div ng-show="modalCliente.visible">
    <div class="modal fade shadow show d-block" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Clientes</h5>
                    <button type="button" class="btn-close" aria-label="Close" ng-click="modalCliente.reset()"></button>
                </div>
                <div class="modal-body row justify-content-center">
                    <div class="col-12">
                        <input type="search" class="form-control" placeholder="buscar por nombre.."
                               ng-change="modalCliente.search()" ng-model="modalCliente.filter" />
                    </div>
                    <div class="col-12 overflow-auto" style="height:400px;">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nombre</th>
                                    <th>Apellido</th>
                                    <th>Teléfono</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="obj in modalCliente.list">
                                    <td>{{ obj.Id }}</td>
                                    <td>{{ obj.Nombre }}</td>
                                    <td>{{ obj.Apellido }}</td>
                                    <td>{{ obj.Telefono }}</td>
                                    <td>
                                        <button type="button" class="btn btn-primary w-100" ng-click="modalCliente.selected(obj)">Seleccionar</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
</div>


