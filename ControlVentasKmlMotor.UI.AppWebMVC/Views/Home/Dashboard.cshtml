@using ControlVentasKmlMotor.EN

@{
    string ValidarCargo()
    {
        return Session["CargoSesion"] != null ? Session["CargoSesion"].ToString() : "";
    }

}

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>

<div class="container-fluid">

    <!-- Resumen Estadístico -->
    <div class="row">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Ventas del Mes</h5>
                    <p class="card-text display-6">25</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Clientes</h5>
                    <p class="card-text display-6">120</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Vehículos Disponibles</h5>
                    <p class="card-text display-6">75</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Facturas</h5>
                    <p class="card-text display-6">20</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Gráficas -->
    <div class="row my-4">
        <div class="col-md-6">
            <canvas id="salesChart"></canvas>
        </div>
        <div class="col-md-6">
            <canvas id="vehiclesChart"></canvas>
        </div>
    </div>

    <!-- Tabla Resumida -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Últimas Ventas</h5>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Fecha</th>
                                <th>Cliente</th>
                                <th>Vehículo</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>07/11/2024</td>
                                <td>Juan Pérez</td>
                                <td>Toyota Corolla</td>
                                <td>$20,000</td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>06/11/2024</td>
                                <td>Maria López</td>
                                <td>Ford Ranger</td>
                                <td>$35,000</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Pie de página -->
    <footer class="text-center mt-4">
        <p>&copy; 2024 KML Motor - Todos los derechos reservados.</p>
    </footer>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>// Gráfica de ventas
        const salesCtx = document.getElementById('salesChart').getContext('2d');
        new Chart(salesCtx, {
            type: 'line',
            data: {
                labels: ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun'],
                datasets: [{
                    label: 'Ventas',
                    data: [12, 19, 3, 5, 2, 3],
                    borderColor: 'rgba(75, 192, 192, 1)',
                    fill: false
                }]
            }
        });

        // Gráfica de vehículos
        const vehiclesCtx = document.getElementById('vehiclesChart').getContext('2d');
        new Chart(vehiclesCtx, {
            type: 'pie',
            data: {
                labels: ['Toyota', 'Ford', 'Chevrolet', 'Honda'],
                datasets: [{
                    data: [12, 15, 10, 8],
                    backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0']
                }]
            }
        });</script>

